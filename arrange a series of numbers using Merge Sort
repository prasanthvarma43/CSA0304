#include <stdio.h>
void merge(int a[], int l, int m, int r) {
    int i=l, j=m+1, k=0, t[50];
    while (i<=m && j<=r) t[k++] = (a[i]<a[j]) ? a[i++] : a[j++];
    while (i<=m) t[k++] = a[i++];
    while (j<=r) t[k++] = a[j++];
    for (i=0; i<k; i++) a[l+i] = t[i];
}
void sort(int a[], int l, int r) {
    if (l<r) {
        int m=(l+r)/2;
        sort(a,l,m); sort(a,m+1,r);
        merge(a,l,m,r);
    }
}
int main() {
    int a[]={5,2,4,1,3}, n=5, i;
    sort(a,0,n-1);
    for(i=0;i<n;i++) printf("%d ",a[i]);
}
