#include <stdio.h>
#include <stdlib.h>

struct N { int d; struct N *l, *r; };

struct N* n(int v) {
    struct N* t = malloc(sizeof(struct N));
    t->d = v; t->l = t->r = NULL;
    return t;
}

void in(struct N* r) { if(r){ in(r->l); printf("%d ",r->d); in(r->r); } }
void pre(struct N* r) { if(r){ printf("%d ",r->d); pre(r->l); pre(r->r); } }
void post(struct N* r) { if(r){ post(r->l); post(r->r); printf("%d ",r->d); } }

int main() {
    struct N* r = n(1);
    r->l = n(2); r->r = n(3);

    in(r);     // Inorder: 2 1 3
    pre(r);    // Preorder: 1 2 3
    post(r);   // Postorder: 2 3 1
    return 0;
}
